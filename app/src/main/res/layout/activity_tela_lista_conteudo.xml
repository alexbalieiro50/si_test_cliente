<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#D9D9D9"
    tools:context=".TelaListaConteudo">

    <View
        android:id="@+id/balaoTopico"
        style="@style/ContainerComponents2"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textTema"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Segurança da Informação"
        android:textColor="@color/roxo"
        android:textSize="12pt"
        app:layout_constraintBottom_toBottomOf="@+id/balaoTopico"
        app:layout_constraintEnd_toEndOf="@+id/balaoTopico"
        app:layout_constraintStart_toStartOf="@+id/balaoTopico"
        app:layout_constraintTop_toTopOf="@+id/balaoTopico"
        app:layout_constraintVertical_bias="0.098" />

    <TextView
        android:id="@+id/txtTopico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="blablablablablabla"
        android:textColor="@color/roxo"
        app:layout_constraintBottom_toBottomOf="@+id/balaoTopico"
        app:layout_constraintEnd_toEndOf="@+id/balaoTopico"
        app:layout_constraintHorizontal_bias="0.223"
        app:layout_constraintStart_toStartOf="@+id/balaoTopico"
        app:layout_constraintTop_toBottomOf="@+id/textTema"
        app:layout_constraintVertical_bias="0.315" />

</androidx.constraintlayout.widget.ConstraintLayout>